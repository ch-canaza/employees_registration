extends layout

block content
  h1 Edit Employee
  form(method='Post', action='/employees/edit/'+employee.id_number)
    #form-group
      label Surname:
      input.form-control(name='surname', type='text', value=employee.surname)
    #form-group
      label Second Surname:
      input.form-control(name='second_surname', type='text', value=employee.second_surname)
    #form-group
      label first Name:
      input.form-control(name='firstname', type='text', value=employee.firstname)
    #form-group
      label Midle Name:
      input.form-control(name='midlename', type='text', value=employee.midlename)
    #form-group
      label Country:
      select.form-control(name='country')
        option(value="Colombia", type='text') Colombia
        option(value="United States", type='text') United States  
    #form-group
      label Id Type:
      select.form-control(name='id_type')
        option(value="C.C", type='text') C.C
        option(value="C.E", type='text') C.E  
        option(value="passport", type='text') Passport  
        option(value="special permission", type='text') Special Permission  
    #form-group
      label Id Number:
      input.form-control(name='id_number', type='text', value=employee.id_number)
    
    #form-group
      label Start Date:
      input.form-control(name='start_date', type='text', placeholder='DD/MM/YYY, you can choose a date between now and one month before ')
    #form-group
      label Area:
